<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivitySoru">

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSoru1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/tvSoru2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCevap" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editCevap" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSoru1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSoru" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSoru2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="20sp" android:textStyle="bold" android:textColor="@android:color/black"
            android:text="Soru "/>
    <android.support.design.widget.FloatingActionButton
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/fabGoster" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="16dp"
            app:fabCustomSize="64dp" app:elevation="4dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCevap"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="CEWAB Selam Hocam"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSoru"
            android:textColor="@android:color/black"
            android:textStyle="italic"/>
</android.support.constraint.ConstraintLayout>