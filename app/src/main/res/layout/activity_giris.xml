<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityGiris">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Web Tasarım \nRehberim"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="13dp" android:textStyle="bold"
            android:textSize="32sp" android:textAllCaps="true" android:gravity="center"
            android:textColor="@android:color/black" android:id="@+id/textView2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="Konular"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/btnKonular" android:textSize="24sp"
                android:layout_marginTop="4dp"/>
        <Button
                android:text="Hakkında"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/btnInfo" android:textSize="24sp"
                android:layout_marginTop="4dp"/>
        <Button
                android:text="Çıkış"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/btnCikis" android:textSize="24sp"
                android:layout_marginTop="4dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>